<% provide(:title, "Sign in") %>
<h1>Sign In</h1>

<div class="form-box">
  <%= form_for(:user, url: session_url) do |f| %>

    <div class="form-row">
      <%= f.label :email %>
      <%= f.text_field :email %>
    </div>

    <div class="form-row">
      <%= f.label :password %>
      <%= f.password_field :password %>
    </div>

    <%= f.submit "Sign in", class: "button-lrg button" %>
  <% end %>

  <p>Not a user? <%= link_to "Sign up",new_user_url %>.</p>
</div>


