<h1>User Settings Page</h1>

<div class="form-box">
  <form>

    <label>Email
      <input type="text" name="user[email]" value="<%= user.get("email") %>">
    </label>

    <label>First name
      <input
        type="text"
        name="user[first_name]"
        value="<%= user.get("first_name") %>">
    </label>

    <label>Last name
      <input type="text"
        name="user[last_name]"
        value="<%= user.get("last_name") %>">
    </label>

    <label>Timezone
      <select name="user[time_zone]">
        <% _(TIME_ZONES).each(function (timeZone) { %>
          <% var name = timeZone.name %>
          <% var selected = (user.get("time_zone") == name ? "selected" : "") %>
          <option value="<%= name %>" <%= selected %>><%= name %></option>
        <% }); %>
      </select>

    </label>

    <label>Password
      <input type="password" name="user[password]">
    </label>

    <label>Password Confirmation
      <input type="password" name="user[password_confirmation]">
    </label>

    <input type="submit" value="Save changes" id="save-user">
  </form>
</div>

<a href="/#">Back To Calendars</a>